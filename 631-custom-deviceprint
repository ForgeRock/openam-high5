#---------------------------------------------
  USER=$1
  PASSWORD=$2

  REST_AUTH_URL=https://${SERVER_FQDN}:443/${OPENAM_DEPLOYMENT_URI}/json/authenticate?realm=/${OPENAM_CUSTOM_DEVICEPRINT_REALM}\&module=LDAP\&noSession=true\&authIndexType=module\&authIndexValue=LDAP

